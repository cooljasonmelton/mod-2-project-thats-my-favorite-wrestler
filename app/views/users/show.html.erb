<div class="index">
<% if @current_user.id == @user.id %>
    <h3> Welcome! </h3>
<% end %>

<h1>Name: <%= @user.name %></h1>
<h1>Bio: <%= @user.bio %></h1>

<% unless @user.user_fav_wrestlers_top_five_rated == [] %>
    <div>
        <img style="padding:-40px" src="<%=@user.user_fav_wrestlers_top_five_rated[0].wrestler.img_url%>" alt="wrestler">
    </div>
<% end %>

<!-- highest rated wrestlers -->

<h3> Top 5 Highest Rated Wrestlers! </h3>

<% if @user.user_fav_wrestlers_top_five_rated == [] %>
    <p> User hasn't added any favorites yet. </p>
<% else %>
    <ol>
        <% @user.user_fav_wrestlers_top_five_rated.each do |fav| %>
            <li>
                <%=fav.wrestler.name%> -- Rating: <%=fav.rating%>
            </li>
        <% end %>
    </ol>
<% end %>
<%= link_to "See Wrestlers", wrestlers_path %>

<!-- highest rated moves -->

<h3> Top 5 Highest Rated Moves! </h3>

<%if @user.user_fav_moves_top_five_rated == []%>
    <p>User hasn't added any favorites yet.</p>
<% else %>
    <ol>
        <% @user.user_fav_moves_top_five_rated.each do |fav| %>
            <li>
                <%=fav.move.name%> -- Rating: <%=fav.rating%>
            </li>
        <% end %>
    </ol>
<% end %>
<%= link_to "See Moves", moves_path %><br><br>
<hr>

<% if @current_user.id == @user.id %>
    <%= button_to "Update User Page", edit_user_path, method: :get %>
    <%= button_to "Delete User Page", areyousure_path, method: :get %>
<% end %>

</div>


